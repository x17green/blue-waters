# ============================================
# SUPABASE (Authentication + Database)
# ============================================
# Get these from: https://supabase.com/dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Site URL for auth redirects (production: https://bluewaters.com)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Database Connection (via Supabase PgBouncer pooler)
# Settings → Database → Connection string → URI (Connection pooling)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection (for migrations)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# ============================================
# REDIS CACHE (Upstash Serverless)
# ============================================
# Get these from: https://upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# ============================================
# PAYMENT INTEGRATIONS
# ============================================
# MetaTickets API (Primary Payment Provider)
# Get keys from: https://metaticket.dev/dashboard
METATICKETS_API_KEY=mt_test_your_key_here
METATICKETS_WEBHOOK_SECRET=whsec_your_secret_here

# Paystack (Fallback/Local Payments)
# Get keys from: https://dashboard.paystack.com/#/settings/developers
PAYSTACK_SECRET_KEY=sk_test_your_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_key_here

# ============================================
# NOTIFICATIONS
# ============================================
# Email (SendGrid or Resend)
SENDGRID_API_KEY=SG.your_sendgrid_key_here
# OR
RESEND_API_KEY=re_your_resend_key_here

# SMS (Twilio or Termii for Nigeria)
# Twilio: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACyour_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
# OR Termii: https://termii.com/
TERMII_API_KEY=TL_your_termii_key_here
TERMII_SENDER_ID=Bayelsa

# ============================================
# MONITORING & ERROR TRACKING
# ============================================
# Sentry: https://sentry.io
SENTRY_DSN=https://your_sentry_dsn@o123.ingest.sentry.io/456
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@o123.ingest.sentry.io/456

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
